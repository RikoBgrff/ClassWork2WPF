        <Grid.RowDefinitions>
            <RowDefinition Height="5*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <ListBox Name="listbox" ItemsSource="{Binding Cars}" MouseDoubleClick="listbox_MouseDoubleClick">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Margin="10" FontSize="25" Text="{Binding Model}"></TextBlock>
                        <TextBlock Margin="10" FontSize="25" Text="{Binding Vendor}"></TextBlock>
                        <Button Margin="10" FontSize="25" Background="Aquamarine" Width="50">Buy</Button>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <Button FontSize="25" Background="Aquamarine" Click="Button_Click_2" Grid.Row="1">Add</Button>
    </Grid>
</Window>
